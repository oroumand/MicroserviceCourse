{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {

      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server = .,1833; Database=ProductManagement ;User Id =sa;Password=1qaz!QAZ; MultipleActiveResultSets=true",
          "schemaName": "log",
          "tableName": "ApplicationLogs",
          "autoCreateSqlTable": true,
          "restrictedToMinimumLevel": "Information",
          "batchPostingLimit": 1000,
          "period": "0.00:00:30"
        }
      },
      {
        "Name": "File",
        "Args": { "path": "%TEMP%\\Logs\\ProductManagement.Log.txt" }
      }
